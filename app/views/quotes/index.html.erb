<div class='list'>
<h1>Quotes</h1>

<table>
  <tr>
    <th>Student ID#</th>
    <th>Computer Login #</th>
    <th>Email</th>
    <th>Quote</th>
  </tr>

<% @lines = 1 %>
<% @quotes.each do |quote| %>
  <% @alternate=' style=\'background-color:#204430\''%>
  <tr class='quoteline'<%= if (@lines % 2 == 0);  @alternate; end %>>
    <% @lines += 1 %>
    <td class='quotelist'><%=h quote.student_id %></td>
    <td class='quotelist'><%=h quote.login_id %></td>
    <td class='quotelist'>
    <% if (quote.email==nil) %>
    <%=h  quote.email %>
    <% else %><%= '*None Given*' %>
    <% end %></td>
    <td class='quotelist'><%=h quote.content %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New quote', '/' %>
</div>
