<div class='list'>
<h1>Quotes</h1>

<table>
  <tr>
    <th>Student ID#</th>
    <th>Name</th>
    <th>Email</th>
    <th>Quote</th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%=h quote.student_id %></td>
    <td><%=h quote.name %></td>
    <td><%=h quote.email %></td>
    <td><%=h quote.content %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New quote', '/' %>
</div>
